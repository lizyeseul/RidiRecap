{
	"manifest_version": 3,
	"name": "RidiRecap",
	"description": "리디 기록 관리",
	"version": "1.0",
	"icons": {
		"16": "images/favicon16.png"
	},
	"action":{
		"default_title":"ri"
	},
	"__sidebar_action": {
		"default_page": "html/index.html",
		"default_icon": {
			"16": "images/favicon16.png"
		}
	},
	"side_panel": {
		"default_path": "html/index.html"
	},
	"background": {
		"service_worker": "scripts/background.js"
	},
	"permissions": ["sidePanel", "webRequest"],
	"host_permissions": [
		"https://ridibooks.com/*"
	]
}