{
	"manifest_version": 3,
	"name": "RidiRecap",
	"description": "리디 기록 관리",
	"version": "1.0",
	"icons": {
		"16": "images/favicon16.png"
	},
	"sidebar_action": {
		"default_title":"ri",
		"default_panel": "html/index.html"
	},
	"background": {
		"service_worker": "scripts/background.js"
	},
	"permissions": ["sidePanel", "webRequest"],
	"host_permissions": [
		"https://ridibooks.com/*",
		"https://library-api.ridibooks.com/*",
		"https://book-api.ridibooks.com/*"
	]
}
